@model IEnumerable<EDIS.Models.RepairModels.VendorModel>

@{
    ViewData["Title"] = "廠商列表";
}

<style>
    /*整個table的調整*/
    table {
        border-collapse: collapse;
        width: 200px;
        /*自動斷行*/
        word-wrap: break-word;
        table-layout: fixed;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">新增廠商</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VendorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tel)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Fax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.UniteNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaxAddress)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.TaxZipCode)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Contact)/<br />
                    @Html.DisplayNameFor(model => model.ContactTel)/<br />
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Kind)
                </th>*@
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Fax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UniteNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxAddress)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TaxZipCode)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Contact)<br />
                @Html.DisplayFor(modelItem => item.ContactTel)<br />
                @Html.DisplayFor(modelItem => item.ContactEmail)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>*@
            <td>
                @if (item.Status == "Y")
                {
                    <span>開</span>
                }
                else if(item.Status == "N")
                {
                    <span>關</span>
                }
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Kind)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendorId">編輯</a> |
                <a asp-action="Details" asp-route-id="@item.VendorId">詳細資訊</a>
                @*<a asp-action="Delete" asp-route-id="@item.VendorId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
