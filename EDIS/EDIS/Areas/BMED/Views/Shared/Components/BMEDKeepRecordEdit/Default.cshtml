@model IEnumerable<EDIS.Areas.BMED.Models.KeepModels.KeepFormatListVModel>

<script src="~/js/BMED/KeepRecordEdit.js" asp-append-version="true"></script>

<form asp-action="Edit" asp-controller="KeepRecord" asp-area="BMED" data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="$.Toast.showToast({
      'title':'作業進行中，請稍待...',
      'icon':'loading',
      'duration':0
      })"
      data-ajax-success="smgKEEPRECORD">

    <div class="container">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plants)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descript)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeepDes)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.Docid)
                        @Html.HiddenFor(modelItem => item.FormatId)
                        @Html.HiddenFor(modelItem => item.Sno)
                        @Html.HiddenFor(modelItem => item.Descript)
                        @Html.DisplayFor(modelItem => item.Sno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plants)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descript)
                    </td>
                    <td>
                        @Html.TextAreaFor(modelItem => item.KeepDes, 5, 50, new { @class = "form-control" })
                    </td>
                </tr>
            }

        </table>

        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="儲存" class="btn btn-default col-md-1" />
                <img id="imglodKEEPRECORD" src="~/Images/opc-ajax-loader.gif" style="display: none" />
            </div>
        </div>
    </div>
</form>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
