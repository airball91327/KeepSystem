@model EDIS.Areas.BMED.Models.RepairModels.QryVendor

<script src="~/js/BMED/QryVendor.js" asp-append-version="true"></script>

<form asp-action="QryVendor" asp-controller="Vendor" asp-area="BMED" data-ajax="true" id="qryVendorForm"
      data-ajax-update="#pnlSELECTVENDOR" data-ajax-method="POST" LoadingElementId="imgLOADINGVendor">

    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="QryType" type="hidden" />

        <div class="form-group">
            <label class="control-title col-md-10">請以【關鍵字】或【統一編號】擇一查詢。</label>
        </div>

        <div class="form-group">
            <label asp-for="KeyWord" class="control-title col-md-2"></label>
            <div class="col-md-10">
                <div class="form-inline">
                    <input asp-for="KeyWord" class="form-control" />
                    <span asp-validation-for="KeyWord" class="text-danger"></span>
                    <input type="submit" value="查詢" class="btn btn-default" id="keyWordBtn" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UniteNo" class="control-title col-md-2"></label>
            <div class="col-md-10">
                <div class="form-inline">
                    <input asp-for="UniteNo" class="form-control" />
                    <span asp-validation-for="UniteNo" class="text-danger"></span>
                    <input type="submit" value="查詢" class="btn btn-default" id="uniteNoBtn" />
                    <img id="imgLOADINGVendor" src="~/Images/opc-ajax-loader.gif" style="display: none" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Vno" class="control-title col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Vno" asp-items="@Model.VendorList" class="form-control"></select>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}