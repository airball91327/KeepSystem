@model EDIS.Areas.BMED.Models.RepairModels.RepairModel

@using EDIS.Models.Identity
@inject CustomUserManager UserManager
@inject CustomRoleManager RoleManager

@{
    Layout = "~/Views/Shared/_PassedLayout.cshtml";
    ViewBag.Title = "編輯/請修";

    if (TempData["SendMsg"] != null)
    {
        <script>
            var message = @Json.Serialize(TempData["SendMsg"]);
            alert(message);
        </script>
    }
}

<script>
    $(function () {
        var activePage = @ViewData["Page"];
        if (activePage != 0) {
            $("#page" + activePage).children("a").click();
        }
    });
</script>

<h2>編輯</h2>
<h4>請修單</h4>
<hr />
<div id="pnlFILES" style="margin: 10pt">
    @await Component.InvokeAsync("BMEDAttainFileList", new { id = Model.DocId, typ = "1", viewType = "Edit" })
</div>
<div class="form-group">
    <div>
        <input id="btnFILES" type="button" value="夾帶附件檔案" class="btn btn-default" data-toggle="modal" data-target="#modalFILES">
    </div>
</div>
<!-- 夾帶檔案 Modal -->
<div id="modalFILES" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #1D3C4C">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="color:#fff">&times;</button>
                <h4 class="modal-title">選擇上傳檔案</h4>
            </div>
            <div class="modal-body">
                @await Component.InvokeAsync("BMEDAttainFileUpload", new { doctype = "1", docid = Model.DocId, viewType = "" })
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">離開</button>
            </div>
        </div>
    </div>
</div>

<div id="pnlREPDTL2">
    @if (UserManager.IsInRole(User, "MedEngineer") == true || UserManager.IsInRole(User, "MedAdmin") == true ||
         UserManager.IsInRole(User, "Admin") == true)
    {
        @await Component.InvokeAsync("BMEDRepEdit", new { id = Model.DocId })
    }
    else
    {
        @await Component.InvokeAsync("BMEDRepDetail2", new { id = Model.DocId })
    }
</div>

<ul class="nav nav-pills" style="font-size:120%">
    <li role="presentation" id="page1" class="active"><a href="#repairdtl" data-toggle="tab" style="padding-left:20px">請修紀錄與工時</a></li>
    @*<li role="presentation" id="page2"><a href="#repairdtl" data-toggle="tab" style="padding-left:20px">請修紀錄</a></li>
    <li role="presentation" id="page3"><a href="#repairemp" data-toggle="tab" style="padding-left:20px">工程師工時</a></li>
    <li role="presentation" id="page4"><a href="#repaircost" data-toggle="tab" style="padding-left:20px">費用明細</a></li>*@
    <li role="presentation" id="page2"><a href="#repaircost" data-toggle="tab" style="padding-left:20px">費用明細</a></li>
    @*<li role="presentation" id="page5"><a href="#repflowlist" data-toggle="tab" style="padding-left:20px">流程紀錄</a></li>*@
    <li role="presentation" id="page3"><a href="#repairflow" data-toggle="tab" style="padding-left:20px">簽核作業</a></li>
</ul>
<hr />
<div class="tab-content">
    <div id="repairdtl" class="tab-pane fad in active">
        <p>
            @await Component.InvokeAsync("BMEDRepDtlEdit", new { id = Model.DocId })
        </p>
        <p>
            @await Component.InvokeAsync("BMEDRepEmpEdit", new { DocId = Model.DocId })
        </p>
    </div>
    <div id="repaircost" class="tab-pane fade">
        <div>
            @await Component.InvokeAsync("BMEDRepCostEdit", new { id = Model.DocId })
        </div>
    </div>
    <div id="repairflow" class="tab-pane fade">
        <div>
            @await Component.InvokeAsync("BMEDRepNextFlow", new { id = Model.DocId })
        </div>
        <div>
            @await Component.InvokeAsync("BMEDRepFlowList", new { id = Model.DocId })
        </div>
    </div>
</div>

<div>
    <a class="btn btn-default" href="@Url.Action("Index", "Home", new { Area = "" } )" id="homeBtn">回到簽核列表</a>
    <a class="btn btn-primary" href="@Url.Action("PrintRepairDoc", "Repair", new { Area = "BMED", DocId = Model.DocId } )" target="_blank">列印</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
